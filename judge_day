#输入某年某月某日，判断这一天是这一年的第几天

def judge_day(year,month,day):
	
	num = 0
	if year % 4 == 0 and year%100!=0 or year%400==0:
		months = [31,29,31,30,31,30,31,31,30,31,30,31]
	else:
		months = [31,28,31,30,31,30,31,31,30,31,30,31]
	for i in range(1,13):
		if i<month:
			num = num+months[i-1]
		else:
			break
	num = num + day
	return num
days=judge_day(1900,3,1)
print("days = ",days)
